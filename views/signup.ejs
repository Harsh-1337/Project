<%- include('partials/headerbl') %>
<div class="container mt-5 siginupCONTAINER">
  <h1 class="signupHeading">Register</h1>

  <div class="row siginupFORM ">
    <div class="col-lg-8">
      <div class="card signupCARD bg-transparent">
        <div class="card-body ">

          <!-- Makes POST request to /register route -->
          <form action="/signup" class="" method="POST">
            <div class="form-group formINPUTS">
              <label for="name">Name *</label>
              <input type="text" class="form-control" name="name" >
            </div>
            <div class="form-group formINPUTS">
              <label for="clgname">College Name *</label>
              <input type="text" class="form-control" name="clgname" >
              <!-- <input type="email" class="form-control" name=""> -->
            </div>
            <div class="form-group formINPUTS role" id="teacher" >
              <label for="gender">Gender *</label>
              <input type="text" class="form-control" name="gender" >
              <!-- <input type="text" class="form-control " name="subject"> -->
            </div>
            <div class="form-group formINPUTS role" id="student" >
              <label for="phn">Phone Number *</label>
              <input type="text" class="form-control " name="phn">
            </div>

            <div class="form-group formINPUTS">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group formINPUTS">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit " class="btn btn-dark signupSUBMITbtn">Register</button>
          </form>

        </div>
      </div>
    </div>
    <div class="col-lg-4 googleCOL">
      <div class="container-fluid">
          <h5 class="googleCHOICE">OR SIGNUP WITH GOOGLE</h5>
        <div class="card social-block googlesignupBTN">
          <div class="card-body">
            <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign Up with Google
            </a>
          </div>
        </div>
      </div>


    </div>


  </div>
</div>

<%- include('partials/footerbl') %>
